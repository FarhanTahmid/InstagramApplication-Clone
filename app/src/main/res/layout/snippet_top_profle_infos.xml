<merge xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"

        >

        <TextView
            android:id="@+id/textPostCount"
            android:layout_width="68dp"
            android:layout_height="34dp"
            android:text="00"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textPost"
            android:layout_width="67dp"
            android:layout_height="32dp"
            android:text="Posts"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textPostCount" />

        <TextView
            android:id="@+id/textFollowingCount"
            android:layout_width="72dp"
            android:layout_height="29dp"
            android:text="00"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textFollowing"
            android:layout_width="74dp"
            android:layout_height="30dp"
            android:layout_marginBottom="36dp"
            android:text="Following"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/textEditYourProfile"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textFollowersCount"
            android:layout_width="73dp"
            android:layout_height="32dp"
            android:text="00"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/textFollowingCount"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toEndOf="@+id/textPostCount"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textFollowers"
            android:layout_width="74dp"
            android:layout_height="29dp"
            android:text="Followers"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textFollowing"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toEndOf="@+id/textPost"
            app:layout_constraintTop_toBottomOf="@+id/textFollowersCount"
            app:layout_constraintVertical_bias="0.008" />

        <TextView
            android:id="@+id/textEditYourProfile"
            android:layout_width="203dp"
            android:layout_height="25dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/black_border_edityourprofile"
            android:text="Edit Your Profile"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.552"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textFollowers" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</merge>